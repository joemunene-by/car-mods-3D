{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "config/**/*",
    "routes/**/*",
    "controllers/**/*",
    "models/**/*",
    "middleware/**/*",
    "utils/**/*",
    "migrations/**/*",
    "seeds/**/*",
    "index.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
